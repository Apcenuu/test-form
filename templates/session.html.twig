{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('styles.css') }}" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% for testQuestion in session.testQuestions %}
                    <div {% if testQuestion.correctAnswered %} class="alert alert-success test-question-correct" {% else %} class="alert alert-danger test-question-wrong" {% endif %}>
                        <h3>{{ testQuestion.question.text }}</h3>
                        {% for answer in testQuestion.concreteAnswers %}
                            <p>
                            {{ answer.answerVariant.text }}
                            {% if answer.selected %}
                                <span class="badge bg-secondary answer-selected">
                                    SELECTED
                                </span>
                            {% endif %}
                            {% if answer.answerVariant.correct %}
                                <span class="badge bg-success answer-correct">
                                    CORRECT
                                </span>
                            {% endif %}
                            </p>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
